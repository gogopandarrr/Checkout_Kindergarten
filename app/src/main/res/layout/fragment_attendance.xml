<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="10"
        android:id="@+id/layout_upper"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="2"
            android:text="이전"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_weight="5"
            android:text="2018년 10월 3일"
            android:id="@+id/tv_currentDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="2"
            android:text="다음"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_switch_attend"
            android:background="@drawable/btn_book"
            android:layout_width="0dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:layout_below="@+id/layout_upper"
        android:id="@+id/calendar"
        android:paddingHorizontal="10dp"
        app:compactCalendarTextSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarBackgroundColor="@color/main_blue"
        app:compactCalendarTextColor="@color/white"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#fff04e"
        app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        />



    <com.evrencoskun.tableview.TableView
        android:visibility="visible"
        android:id="@+id/tableView_container"
        android:layout_below="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:column_header_height="@dimen/cell_height"
        app:row_header_width="@dimen/row_header_width"
        app:shadow_color="@color/table_view_default_shadow_background_color"
        app:unselected_color="@color/table_view_default_unselected_background_color"
        app:separator_color="@color/table_view_default_separator_color"

        ></com.evrencoskun.tableview.TableView>



</RelativeLayout>