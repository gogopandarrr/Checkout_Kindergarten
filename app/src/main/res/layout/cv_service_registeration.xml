<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.onethefull.attendmobile.account.join.RegisterActivity">


    <EditText
        android:id="@+id/et_email"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:hint="이메일 주소를 입력해주세요."
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:singleLine="true"
        android:text="test13@1thefull.com"/>

    <EditText
        android:id="@+id/et_kindergarten"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/et_email"
        android:layout_marginTop="60dp"
        android:hint="유치원 이름을 입력해주세요."
        android:inputType="textPersonName"
        android:privateImeOptions="defaultInputmode=korean"
        android:singleLine="true"
        android:textSize="14sp"
        android:text="test13"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="199dp"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="14sp"
        android:text="1thefull"/>

    <EditText
        android:id="@+id/et_password_confirm"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="121dp"
        android:hint="비밀번호를 한번 더 입력해주세요"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="14sp"
        android:text="1thefull"/>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼"/>



</RelativeLayout>