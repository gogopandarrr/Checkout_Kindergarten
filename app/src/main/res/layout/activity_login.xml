<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.login.LoginActivity"
    android:background="@drawable/bg1"
    android:id="@+id/bg_login"
    >


    <ImageView
        android:id="@+id/logo_login"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bi2" />


        <LinearLayout
            android:layout_below="@+id/logo_login"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingEnd="30dp"
                android:paddingStart="50dp">

                <android.support.design.widget.TextInputLayout
                    android:gravity="center"
                    app:hintEnabled="false"
                    app:boxCornerRadiusBottomStart="10dp"
                    android:background="@drawable/txtbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ACACAC">

                    <EditText
                        android:background="@android:color/transparent"
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:hint="이메일 주소를 입력해주세요."
                        android:inputType="textPersonName"
                        android:textSize="13sp"
                        android:singleLine="true"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingEnd="30dp"
                android:paddingStart="50dp">

                <android.support.design.widget.TextInputLayout
                    android:gravity="center"
                    app:hintEnabled="false"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    android:background="@drawable/txtbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ACACAC">

                    <EditText
                        android:layout_gravity="center_vertical"
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@android:color/transparent"
                        android:hint="비밀번호를 입력해주세요."
                        android:inputType="textPassword"
                        android:textSize="13sp"
                        android:singleLine="true"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_marginStart="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/autoCheck"
                    android:button="@drawable/checkbox"
                    android:textSize="20sp"
                    android:drawableRight="@drawable/auto_login"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="60dp"
                android:gravity="center">

                <Button
                    android:id="@+id/bt_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="@string/login_button"
                    android:textColor="@color/white"></Button>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bt_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="104dp"
                    android:clickable="true"
                    android:text="@string/forgot_password"
                    android:textSize="12sp" />

                <TextView
                    android:text="회원가입"
                    android:layout_marginStart="29dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_register"
                    />
            </LinearLayout>

        </LinearLayout>



</RelativeLayout>