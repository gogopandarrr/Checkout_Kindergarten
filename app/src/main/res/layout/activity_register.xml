<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.onethefull.attendmobile.account.join.RegisterActivity">


    <RelativeLayout
        android:background="@drawable/popup_board"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="136dp"
        android:layout_width="310dp"
        android:layout_height="320dp">

        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/tv_title"
            android:layout_marginTop="32dp"
            android:layout_marginStart="35dp"
            android:textColor="#393939"
            android:textSize="18dp"
            android:text="@string/join_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:visibility="visible"
            android:id="@+id/layout_register"
            android:layout_below="@+id/tv_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="240dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/write_email"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:singleLine="true"
                />

            <EditText
                android:id="@+id/et_kindergarten"
                android:layout_width="240dp"
                android:layout_height="37dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/write_kindergarten"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:privateImeOptions="defaultInputmode=korean"
                android:singleLine="true"
                />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="240dp"
                android:layout_height="37dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/write_pwd"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:singleLine="true"
                />

            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="240dp"
                android:layout_height="37dp"
                android:layout_marginTop="5sp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/write_pwd_again"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:singleLine="true"
                />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_marginStart="14dp"
                android:background="@drawable/btn_close"
                android:layout_width="140dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/bt_next"
                android:background="@drawable/btn_confirm"
                android:layout_width="140dp"
                android:layout_height="40dp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/layout_forgot"
            android:layout_below="@+id/tv_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_email_find"
                android:layout_width="240dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/write_email"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_forgot"
                android:textColor="#00b0ff"
                android:textSize="11dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="35dp"
                android:text="@string/finding_email"
                android:layout_width="230dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>




</RelativeLayout>