<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_login01"
    tools:context=".RegisterActivity">


    <FrameLayout
        android:layout_centerInParent="true"
        android:paddingTop="70dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_legister"
            app:cardBackgroundColor="#2ea67f"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title_register"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="@string/register_title"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#f0f7f4"
                        >

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:hint="E-mail"
                            android:textColor="#f0f7f4"
                            android:textSize="13dp"
                            android:background="@drawable/selector_bg_edit_2"
                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="2dp"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_register"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <android.support.design.widget.TextInputLayout
                            android:theme="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#f0f7f4"
                            >

                            <EditText
                                android:id="@+id/et_username"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:hint="Name"
                                android:textColor="#f0f7f4"
                                android:textSize="13dp"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:inputType="textPersonName"
                                android:paddingBottom="2dp"
                                android:singleLine="true"
                                android:privateImeOptions="defaultInputmode=korean"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <android.support.design.widget.TextInputLayout
                            android:theme="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#f0f7f4"
                            >

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:hint="Password"
                                android:textColor="#f0f7f4"
                                android:textSize="13dp"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:inputType="textPassword"
                                android:paddingBottom="2dp"
                                android:singleLine="true"
                                />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <android.support.design.widget.TextInputLayout
                            android:theme="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#f0f7f4">
                            <EditText
                                android:id="@+id/et_password_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:hint="Repeat Password"
                                android:textColor="#f0f7f4"
                                android:textSize="13dp"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:inputType="textPassword"
                                android:paddingBottom="2dp"
                                android:singleLine="true"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/bt_signUp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_shape_2"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="@string/register_button"
                    android:textColor="#2fa881" />

                </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/ic_close_w"
            android:transitionName="loginFab"
            android:layout_gravity="center_horizontal|top"
            />

    </FrameLayout>

</RelativeLayout>